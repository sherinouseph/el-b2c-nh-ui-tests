@objects
    illustrator-content-*        css     section.illustrator .stretcher
    illustrator-opening-text-*   css     section.illustrator .opening p
    illustrator-caption-title-*  css     section.illustrator .caption p
#
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#
#= All Illustrator components =
#    illustrator-content:
#                        aligned horizontally "${contentAlignment}" "${alignedWithMeElement}"
= check components position and font size =
  @on desktop
     illustrator-content-1:
                                 aligned horizontally top illustrator-opening-text-1
     illustrator-caption-title-1:
                                 right-of illustrator-content-1
                                 below illustrator-opening-text-1
                                 css font-size is "36px"


     illustrator-content-2:
                                 aligned horizontally top illustrator-opening-text-2
     illustrator-caption-title-2:
                                 left-of illustrator-content-2
                                 below illustrator-opening-text-2


     illustrator-caption-title-3:
                                 right-of illustrator-content-3
                                 below illustrator-opening-text-3


     illustrator-content-4:
                                 aligned horizontally top illustrator-opening-text-4
     illustrator-caption-title-4:
                                 right-of illustrator-content-4
                                 below illustrator-opening-text-4


     illustrator-caption-title-5:
                                 left-of illustrator-content-5
                                 below illustrator-opening-text-5
                                 css font-size is "32px"


     illustrator-caption-title-6:
                                 left-of illustrator-content-6
                                 below illustrator-opening-text-6


     illustrator-content-7:
                                 aligned horizontally top illustrator-opening-text-7
     illustrator-caption-title-7:
                                 right-of illustrator-content-7
                                 below illustrator-opening-text-7


     illustrator-caption-title-8:
                                 left-of illustrator-content-8
                                 below illustrator-opening-text-8


     illustrator-content-9:
                                 aligned horizontally top illustrator-opening-text-9
     illustrator-caption-title-9:
                                 right-of illustrator-content-9


     illustrator-caption-title-10:
                                 above illustrator-content-10


     illustrator-caption-title-11:
                                 right-of illustrator-content-11


  @on mobile
     illustrator-content-1:
                                 below illustrator-opening-text-1
                                 below illustrator-caption-title-1 5 to 15 px
     illustrator-caption-title-1:
                                 below illustrator-opening-text-1
                                 css font-size is "30px"


     illustrator-content-2:
                                 above illustrator-opening-text-2
                                 above illustrator-caption-title-2
     illustrator-caption-title-2:
                                 below illustrator-opening-text-2
                                 css font-size is "25px"

     illustrator-content-3:
                                 below illustrator-opening-text-3
                                 below illustrator-caption-title-3 40 to 70 px








