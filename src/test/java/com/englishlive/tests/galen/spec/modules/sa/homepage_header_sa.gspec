@objects
    header              css      nav
    headerLogo          css      nav .logo
    loginLink           css      a[href='/ar-sa/login/']
    # mobileMenuIcon only mobile view < 1225 px
    mobileMenuIcon      css      .icon.icon-burger
#
# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
#
= Header section =
   = Header Size =
       @on mobile
          header:
                height 50 to 75px
                width 40 to 500px
       @on tablet
          header:
                height  55 to 80px
                width  725 to 760px
       @on desktop
          header:
                height 55 to 80px
                width  1325 to 1360px

   = Header Logo =
       @on mobile, tablet, desktop
         headerLogo:
                   inside header
                   visible

   = Header Mobile Menu =
       @on mobile, tablet
         mobileMenuIcon:
                       inside header
                       visible
                       left-of headerLogo

       @on desktop
         mobileMenuIcon:
                       absent
         headerLogo:
                       right-of loginLink